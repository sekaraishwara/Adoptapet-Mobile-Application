<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPetsNGO">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivAddPetNGO"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/add_photo_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/etAddPetAgeNGO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:ems="10"
            android:elevation="6dp"
            android:hint="Age"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="446dp"
            android:background="@drawable/custom_edit_text"
            android:padding="15dp"
            app:layout_constraintTop_toBottomOf="@+id/ivAddPetNGO"/>

        <EditText
            android:id="@+id/etAddPetBreedNGO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="6dp"
            android:ems="10"
            android:hint="Breed"
            android:inputType="textPersonName"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAddPetAgeNGO" />

        <EditText
            android:id="@+id/etAddPetAddressNGO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="6dp"
            android:ems="10"
            android:hint="City, State, Country"
            android:inputType="textPersonName"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAddPetBreedNGO" />

        <TextView
            android:id="@+id/tvAddPetGenderNGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="0dp"
            android:text="Gender"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etAddPetAddressNGO" />

        <RadioGroup
            android:id="@+id/rgAddPetGenderNGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:elevation="6dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddPetGenderNGO"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAddPetMaleNGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingStart="5dp"
                android:text="Male"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbAddPetFemaleNGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:paddingStart="5dp"
                android:text="Female"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/tvAddPetTypeNGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="25dp"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="0dp"
            android:text="Type"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rgAddPetGenderNGO" />

        <RadioGroup
            android:id="@+id/rgAddPetTypeNGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:elevation="6dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAddPetTypeNGO"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbAddPetDogNGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:paddingStart="5dp"
                android:text="Dog"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rbAddPetCatNGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:paddingStart="5dp"
                android:text="Cat"
                android:textColor="@android:color/tab_indicator_text"
                android:textSize="16sp" />

        </RadioGroup>


        <EditText
            android:id="@+id/etAddPetAboutNGO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_edit_text"
            android:elevation="6dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="About Pet"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgAddPetTypeNGO" />

        <Button
            android:id="@+id/btnAddPetNGO"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/custom_button"
            android:elevation="6dp"
            android:text="Add Lost Pet"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            app:icon="@drawable/add_icon"
            app:iconGravity="textStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etAddPetAboutNGO" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>